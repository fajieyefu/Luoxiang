<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fajieyefu.com.luoxiang.layout.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fajieyefu.com.luoxiang.layout.TitleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*选择大区:"
                style="@style/tv_16sp_black"
                />
            <fajieyefu.com.luoxiang.layout.MySpinnerForFree
                android:paddingLeft="3dp"
                android:id="@+id/select_area"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                style="@style/tv_12sp_MyOrange"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*客户名称:"
                style="@style/tv_16sp_black"
                />
            <EditText
                android:paddingLeft="3dp"
                android:id="@+id/customer"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                style="@style/tv_12sp_MyOrange"
                android:background="@drawable/edit_input"
                android:hint="汽贸客户填写公司全名，个人填写姓名"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*身份编码:"
                style="@style/tv_16sp_black"
                />
            <EditText
                android:paddingLeft="3dp"
                android:id="@+id/credit_code"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                style="@style/tv_12sp_MyOrange"
                android:background="@drawable/edit_input"
                android:inputType="number"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="汽贸写社会信用代码，个人填写身份证号"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*联系方式:"
                style="@style/tv_16sp_black"/>
            <EditText
                android:paddingLeft="3dp"
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:inputType="number"
                style="@style/tv_12sp_MyOrange"
                android:background="@drawable/edit_input"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*联 系 人:"
                style="@style/tv_16sp_black"/>
            <EditText
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:id="@+id/person"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                style="@style/tv_12sp_MyOrange"
                android:background="@drawable/edit_input"
                />
        </LinearLayout>
        <RelativeLayout
            style="@style/clue_info_edit_layout"
            android:paddingRight="0dp"
            android:background="@null"
            >

            <TextView
                android:id="@+id/t7"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*客户地址:"
                android:textColor="@color/deep_black"
                style="@style/tv_16sp_black"
                />
            <LinearLayout
                android:layout_toRightOf="@id/t7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fajieyefu.com.luoxiang.layout.MySpinnerForU8HrCt007
                    android:id="@+id/province"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="省"
                    android:textSize="15sp"
                    />
                <fajieyefu.com.luoxiang.layout.MySpinnerForU8HrCt007
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"                        android:background="@null"
                    android:hint="市"
                    android:textSize="15sp"
                    />
                <fajieyefu.com.luoxiang.layout.MySpinnerForU8HrCt007
                    android:id="@+id/country"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:hint="县"
                    android:textSize="15sp"
                    />
            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*详细地址:"
                style="@style/tv_16sp_black"
                />
            <EditText
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:id="@+id/customerAddress"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                style="@style/tv_12sp_MyOrange"
                android:background="@drawable/edit_input"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical">
            <TextView
                style="@style/tv_16sp_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="汽贸客户：" />

            <CheckBox
                android:checked="true"
                android:id="@+id/isQM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:text="勾选为汽贸客户,否则为个人客户" />
        </LinearLayout>




        <Button
            android:id="@+id/addCustomer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_red"
            android:text="@string/addCustomer"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>