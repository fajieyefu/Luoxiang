<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="编辑开票信息"
                android:layout_centerInParent="true"
                android:textColor="@color/Myorange"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/Myorange"
                android:text="关闭"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <ScrollView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="40dp"
                >

                <RelativeLayout
                    style="@style/clue_info_edit_layout"
                    >

                    <EditText
                        android:id="@+id/invioce_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/xs"
                        android:background="@null"
                        android:layout_centerInParent="true"
                        />

                    <TextView
                        android:id="@+id/xs"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="开票名称："
                        android:textColor="@color/deep_black"
                        android:layout_alignTop="@+id/invioce_name_edit"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/clue_info_edit_layout"
                    >

                    <TextView
                        android:id="@+id/cl2"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="税        号："
                        android:textColor="@color/deep_black"
                        />

                    <EditText
                        android:id="@+id/invioce_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_toRightOf="@+id/cl2"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    style="@style/clue_info_edit_layout"
                    >

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="地址电话："
                        android:textColor="@color/deep_black"
                        />

                    <EditText
                        android:id="@+id/invioce_address_phone_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_toRightOf="@+id/t1"
                        android:background="@null"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/clue_info_edit_layout"
                    >

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="银行账号："
                        android:textColor="@color/deep_black"
                        />

                    <EditText
                        android:id="@+id/bank_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:layout_toRightOf="@id/t2"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/clue_info_edit_layout"

                    >

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="发票类别："
                        android:textColor="@color/deep_black"
                        />

                    <fajieyefu.com.luoxiang.layout.MySpinnerForFree
                        android:id="@+id/invioce_type_edit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/t3"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/clue_info_edit_layout"

                    >

                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*开票金额："
                        android:textColor="@color/deep_black"
                        />

                    <EditText
                        android:id="@+id/invioce_money_edit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/t5"
                        android:background="@null"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/clue_info_edit_layout"

                    >

                    <TextView
                        android:id="@+id/t6"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="开票项目："
                        android:textColor="@color/deep_black"
                        />
                    <EditText
                        android:id="@+id/invioce_project_edit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/t6"
                        android:background="@null"
                        android:hint=""
                        android:textSize="15sp"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/file_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="添加附件"/>

                    <fajieyefu.com.luoxiang.layout.MyGridView
                        android:id="@+id/my_goods_GV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:numColumns="4" />
                </LinearLayout>
                <Button
                    android:id="@+id/commit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/white"
                    android:text="确认修改"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_red"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>