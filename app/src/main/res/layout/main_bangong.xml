<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f1e6"
    >


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/Myorange"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/corner_oval"
        android:gravity="center">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@mipmap/logo_icon"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/rela">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <RadioButton
                    style="@style/MyRadioButton"
                    android:id="@+id/contract_input"
                    android:drawableTop="@mipmap/zixun"
                    android:text="订单录入"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/contract_history"
                    style="@style/MyRadioButton"
                    android:drawableTop="@mipmap/liulan"
                    android:text="历史订单"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/contract_edit"
                style="@style/MyRadioButton"
                android:drawableTop="@mipmap/shenhe"
                android:text="订单审核"
                android:visibility="gone"
                />
                <RadioButton
                    android:id="@+id/check_stock"
                    style="@style/MyRadioButton"
                    android:drawableTop="@mipmap/shenhe"
                    android:text="库存盘点"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_below="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/clueResource"
                style="@style/MyRadioButton"
                android:drawableTop="@mipmap/ziyuan"
                android:text="客户资源"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/all_contract"
                    style="@style/MyRadioButton"
                    android:drawableTop="@mipmap/fenxi"
                    android:text="图标分析"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/queryOrderPc"
                    style="@style/MyRadioButton"
                    android:drawableTop="@mipmap/search"
                    android:text="工期查询"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>
</RelativeLayout>
