<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fajieyefu.com.luoxiang.layout.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fajieyefu.com.luoxiang.layout.TitleLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:text="牵引车："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/qianyinche"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/powerType"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="客户:"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=""/>

                <TextView
                    android:text="电话:"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                     />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="一、订购标的的数量及价格"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    >
                    <TextView
                        style="@style/previewContract"
                        android:text="挂车样式"/>
                    <TextView
                        style="@style/previewContract"
                        android:text="规格型号"/>
                    <TextView
                        style="@style/previewContract"
                        android:text="颜色"/>
                    <TextView
                        style="@style/previewContract"
                        android:layout_weight="0.5"
                        android:text="数量"/>
                    <TextView
                        style="@style/previewContract"
                        android:text="总价"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >
                    <TextView
                        style="@style/previewContract_black"
                        android:id="@+id/carStyle"
                        android:text=""/>
                    <TextView
                        android:id="@+id/model"
                        style="@style/previewContract_black"
                        android:text=""/>
                    <TextView
                        android:id="@+id/color"
                        style="@style/previewContract_black"
                        android:text=""/>
                    <TextView
                        android:id="@+id/booknum"
                        style="@style/previewContract_black"
                        android:layout_weight="0.5"
                        android:text=""/>

                    <TextView
                        style="@style/previewContract_black"
                        android:text=""
                        android:id="@+id/price" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="二、上述车辆买受人选装以下配置（单位为mm）"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_black">

                <TextView
                    style="@style/previewContract_h"
                    android:text="车架"
                     />
                <TextView
                    android:id="@+id/chejia"
                    style="@style/previewContract_black_h"
                    android:text=""
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    />
                <TextView

                    style="@style/previewContract_h"
                    android:text="栏板样式"
                    />
                <TextView
                    android:id="@+id/lanban"
                    style="@style/previewContract_black_h"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_black">

                <TextView
                    style="@style/previewContract_h"
                    android:text="牵引车"
                    />
                <TextView
                    android:id="@+id/lidigao"
                    style="@style/previewContract_black_h"
                    android:text=""
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    />
                <TextView

