<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    >
    <include
        android:id="@+id/queryClue"
        layout="@layout/choose_myclue_layout"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        />

    <fajieyefu.com.luoxiang.widget.XListView
        android:id="@+id/my_clue_info_lv"
        android:layout_below="@+id/queryClue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
    </fajieyefu.com.luoxiang.widget.XListView>

    <ImageView
        android:id="@+id/empty_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/empty_view"
        android:layout_centerInParent="true"/>
    <include
        android:id="@+id/filterLayout"
        layout="@layout/myclue_filter_layout"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/queryClue"/>
</RelativeLayout>
